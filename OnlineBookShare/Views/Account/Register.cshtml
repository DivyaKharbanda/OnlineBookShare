<body>
    <div class="container">

        <header>
            <h1>Login or Register</h1>

        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="tologin"></a>
                <a class="hiddenanchor" id="toregister"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal" role="form">

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h1> Sign up </h1>
                            <p>
                                <label asp-for="UserName" class="uname">Username </label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </p>
                            <p>
                                <label asp-for="Password" class="youpasswd"> Password </label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>

                            <p class="signin button">
                                <input type="submit" value="Register" />
                            </p>
                            <p class="change_link">
                                Already a member ?
                                <a href="#toregister" class="to_register"> Go and log in </a>
                            </p>
                        </form>
                    </div>
                    <div id="register" class="animate form">
                        <form asp-action="Login" asp-controller="Account" method="post" class="form-signin" role="form">

                            <div asp-validation-summary="All" class="text-danger"></div>

                            <h1>Log in</h1>
                            <p>
                                <label asp-for="UserName" class="uname"> email or username </label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </p>
                            <p>
                                <label asp-for="Password" class="youpasswd"> Password </label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Log in" />
                                </div>
                            </div>
                            <p class="change_link">
                                Not a member yet ?
                                <a href="#tologin" class="to_register">Join us</a>
                            </p>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </div>
</body>
